<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="app.num.linechart.FlushActivity">

    <com.github.mikephil.charting.charts.LineChart
        android:id="@+id/chartFlush"
        android:layout_width="344dp"
        android:layout_height="200dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp" />

    <LinearLayout
        android:id="@+id/linearFlush"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_marginTop="39dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintTop_toBottomOf="@+id/chartFlush"
        app:layout_constraintRight_toRightOf="parent">

        <Button
            android:id="@+id/buttonJour"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Jour"
            tools:layout_editor_absoluteX="13dp"
            tools:layout_editor_absoluteY="232dp" />

        <Button
            android:id="@+id/buttonSemaine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Semaine"
            tools:layout_editor_absoluteX="95dp"
            tools:layout_editor_absoluteY="229dp" />

        <Button
            android:id="@+id/buttonMois"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mois"
            tools:layout_editor_absoluteX="185dp"
            tools:layout_editor_absoluteY="232dp" />

        <Button
            android:id="@+id/buttonAnnee"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="AnnÃ©e"
            tools:layout_editor_absoluteX="268dp"
            tools:layout_editor_absoluteY="231dp" />

    </LinearLayout>

    <com.github.mikephil.charting.charts.BarChart
        android:layout_width="326dp"
        android:layout_height="220dp"
        android:id="@+id/barChartFlush"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintTop_toBottomOf="@+id/linearFlush"
        android:layout_marginTop="44dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp" />


</android.support.constraint.ConstraintLayout>
