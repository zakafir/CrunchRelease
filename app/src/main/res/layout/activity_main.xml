<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="app.num.linechart.MainActivity">

    <ImageButton
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:id="@+id/btnGoutte"
        android:text="Goutte"
        android:src="@drawable/water"
        android:layout_width="150dp"
        android:layout_height="150dp"
        tools:layout_editor_absoluteY="371dp"
        tools:layout_editor_absoluteX="256dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


    <ImageButton
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:id="@+id/btnReglage"
        android:text="Settings"
        android:src="@drawable/settings"
        android:layout_width="150dp"
        android:layout_height="150dp"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="111dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />


    <ImageButton
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:id="@+id/btnAlerte"
        android:text="Alerte"
        android:src="@drawable/warnings"
        android:layout_width="150dp"
        android:layout_height="150dp"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="231dp"
        android:layout_alignTop="@+id/btnChasse"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ImageButton
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:id="@+id/btnChasse"
        android:text="Chasse d'eau"
        android:src="@drawable/flush"
        android:layout_width="150dp"
        android:layout_height="150dp"
        tools:layout_editor_absoluteX="256dp"
        tools:layout_editor_absoluteY="231dp"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:id="@+id/btnLed"
        android:src="@drawable/led"
        android:text="Led"
        android:layout_width="150dp"
        android:layout_height="150dp"
        tools:layout_editor_absoluteX="256dp"
        tools:layout_editor_absoluteY="111dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:id="@+id/btnRobinet"
        android:text="Robinet"
        android:src="@drawable/tap"
        android:layout_width="150dp"
        android:layout_height="150dp"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="371dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
