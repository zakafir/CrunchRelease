<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="app.num.linechart.SettingsActivity">


    <Button
    android:text="Infos"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/button2"
        android:layout_marginTop="47dp"
        app:layout_constraintTop_toBottomOf="@+id/tag3" />

    <Button
        android:text="Aide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="6dp"
        app:layout_constraintTop_toBottomOf="@+id/button2" />

    <LinearLayout
        android:id="@+id/tag3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingTop="50dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout3">

        <Switch
            android:id="@+id/mySwitch3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/switchStatus"
            tools:layout_editor_absoluteY="31dp" />

        <TextView
            android:id="@+id/switchStatus3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Remise Ã  0 des statistiques"
            android:textAppearance="?android:attr/textAppearanceMedium"
            tools:layout_editor_absoluteX="103dp"
            tools:layout_editor_absoluteY="31dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingTop="50dp"
        android:id="@+id/linearLayout3"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toBottomOf="@+id/tag2"
        tools:layout_editor_absoluteX="8dp">

        <Switch
            android:id="@+id/mySwitch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/switchStatus"
            tools:layout_editor_absoluteY="31dp" />

        <TextView
            android:id="@+id/switchStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mise en Veille"
            android:textAppearance="?android:attr/textAppearanceMedium"
            tools:layout_editor_absoluteX="103dp"
            tools:layout_editor_absoluteY="31dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/tag2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingTop="50dp"
        tools:layout_editor_absoluteY="0dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent">

        <Switch
            android:id="@+id/mySwitch2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/switchStatus"
            tools:layout_editor_absoluteY="31dp" />

        <TextView
            android:id="@+id/switchStatus2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Verouillage utilisateur"
            android:textAppearance="?android:attr/textAppearanceMedium"
            tools:layout_editor_absoluteX="103dp"
            tools:layout_editor_absoluteY="31dp" />

    </LinearLayout>

</android.support.constraint.ConstraintLayout>
